import java.util.*;
class Pfactor
{
 public static void main(String args[])
 {
 int count=1;
   Scanner sc=new Scanner(System.in);
   System.out.println("Enter number=  ");
   int num=sc.nextInt();
   for(int i=2;i<=num;i++)
     {   
	    if(num%i==0)
	   {
		while(num%i==0)
		num=num/i;
		count++;
	   }
	 System.out.print(num+"^"+count);
  }
}